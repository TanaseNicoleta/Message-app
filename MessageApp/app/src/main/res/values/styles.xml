    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/whitecolor</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="titleTextColor">@color/textColor</item>
        <item name="textInputStyle">@drawable/round_border</item>
        <item name="bottomNavigationStyle">@style/BottomNavigation</item>
        <item name="radioButtonStyle">@style/RadioButton</item>
        <item name="buttonStyle">@style/MyButton</item>
        <item name="alertDialogTheme">@style/AlertDialogTheme</item>
        <item name="editTextStyle">@style/EditTextStyle</item>
        <item name="fontFamily">@font/alice</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/round_border</item>
        <item name="android:drawablePadding">16dp</item>
        <item name="android:padding">10dp</item>
        <item name="android:ems">10</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#f00</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">#00f</item>
    </style>


    <style name="MyButton" parent="@android:style/Widget.Button">
        <item name="android:background">@color/startColor2</item>
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:padding">5dp</item>
    </style>

    <style name="BottomNavigation">
        <item name="android:background">@color/startColor2</item>
    </style>

    <style name="RadioButton" parent="Base.Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:background">@drawable/radio_button_selector</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textColor">@drawable/radio_button_text_color</item>
        <item name="android:padding">2dp</item>
    </style>

    <style name="Acasa">
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whitecolor</item>
        <item name="android:layout_margin">12dp</item>
    </style>

    <style name="Lv_credit_text_style">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/whitecolor</item>
    </style>

</resources>