<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/bank_icon"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_margin="10dp"
        android:src="@drawable/ic_baseline_account_balance_24"
        app:tint="@color/startColor3"
        />
    <TextView
        android:id="@+id/tv_bank_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18dp"
        android:textAllCaps="true"
        android:hint="@string/denumire_banca"
        app:layout_constraintStart_toEndOf="@+id/bank_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tv_bank_adress"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="8dp"
        android:textColor="@color/startColor3"
        android:textStyle="bold"
        android:gravity="left"
        android:textAlignment="gravity"
        />
    <TextView
        android:id="@+id/tv_bank_adress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="@string/bankActivity_bank_adress"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:textColor="@color/startColor3"
        android:gravity="left"
        android:textAlignment="gravity"
        />
    <TextView
        android:id="@+id/tv_bank_commission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16dp"
        android:hint="@string/bank_comision"
        app:layout_constraintTop_toBottomOf="@+id/tv_bank_adress"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/startColor3"
        android:gravity="left"
        android:textAlignment="gravity"
        />

</androidx.constraintlayout.widget.ConstraintLayout>