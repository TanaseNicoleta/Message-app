<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.4"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@color/buttonsColor">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_avatar"
            android:layout_width="117dp"
            android:layout_height="120dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_nume_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/nume"
            android:layout_marginEnd="8dp"
            android:textColor="@color/whitecolor"
            android:layout_marginTop="8dp"/>

        <TextView
            android:id="@+id/tv_prenume_contact"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/prenume"
            android:textColor="@color/whitecolor"
            android:layout_marginTop="8dp"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.6"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <ImageView
                android:id="@+id/iv_telefon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_local_phone_24"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titlu_telefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/telefon" />

                <TextView
                    android:id="@+id/tv_telefon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/telefon"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_cake_24"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titlu_data_nasterii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_nasterii_dd_mm_yyyy"/>

                <TextView
                    android:id="@+id/tv_data_nasterii"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/data_nasterii_dd_mm_yyyy"/>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_attach_money_24"
                android:layout_marginRight="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_titlu_suma_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/suma_cont" />

                <TextView
                    android:id="@+id/tv_suma_cont"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/suma_cont" />

                </LinearLayout>
            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="14dp">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="4dp"
                android:layout_marginEnd="10dp"
                android:src="@drawable/ic_baseline_edit_24" android:layout_marginRight="10dp" />
            <TextView
                android:id="@+id/tv_titlu_edit"
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/click_and_edit" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>